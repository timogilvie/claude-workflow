{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Claude/Codex workflow configuration",
  "type": "object",
  "properties": {
    "linear": {
      "type": "object",
      "properties": {
        "defaultProject": { "type": "string" },
        "projects": { "type": "array", "items": { "type": "string" } }
      },
      "required": ["defaultProject"]
    },
    "git": {
      "type": "object",
      "properties": {
        "featurePrefix": { "type": "string", "default": "feature" },
        "bugfixPrefix": { "type": "string", "default": "bugfix" }
      }
    },
    "checks": {
      "type": "object",
      "properties": {
        "test": { "type": "string" },
        "lint": { "type": "string" },
        "build": { "type": "string" },
        "typecheck": { "type": "string" },
        "requireBuildBeforePR": {
          "type": "boolean",
          "default": true,
          "description": "When true, build check must pass before PR creation. Can be disabled to bypass the build gate."
        }
      }
    }
  },
  "required": ["linear"]
}

{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "eval-record.schema.json",
  "title": "EvalRecord",
  "description": "A single eval result record capturing the outcome of an autonomous task execution, including the prompt, model, score, timing, and any human interventions.",
  "type": "object",
  "required": [
    "id",
    "schemaVersion",
    "originalPrompt",
    "modelId",
    "modelVersion",
    "score",
    "scoreBand",
    "timeSeconds",
    "timestamp",
    "interventionRequired",
    "interventionCount",
    "interventionDetails",
    "rationale"
  ],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for this eval record (UUID v4 recommended)."
    },
    "schemaVersion": {
      "type": "string",
      "description": "Schema version for forward compatibility (semver, e.g. \"1.0.0\").",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "originalPrompt": {
      "type": "string",
      "description": "The task prompt that was given to the agent."
    },
    "modelId": {
      "type": "string",
      "description": "Model identifier (e.g. \"claude-opus-4-6\")."
    },
    "modelVersion": {
      "type": "string",
      "description": "Specific model version string for reproducibility."
    },
    "judgeModel": {
      "type": "string",
      "description": "Model ID used by the LLM judge for this eval."
    },
    "judgeProvider": {
      "type": "string",
      "description": "Provider used by the LLM judge for this eval (e.g. 'anthropic')."
    },
    "score": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "Numeric score between 0 and 1 (inclusive). Preserves full granularity; use scoreBand for human-readable interpretation."
    },
    "scoreBand": {
      "type": "string",
      "enum": [
        "Failure",
        "Partial",
        "Assisted Success",
        "Minor Feedback",
        "Full Success"
      ],
      "description": "The rubric band label derived from the score."
    },
    "timeSeconds": {
      "type": "number",
      "minimum": 0,
      "description": "Wall-clock time in seconds for task completion."
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 datetime string when the eval was recorded."
    },
    "interventionRequired": {
      "type": "boolean",
      "description": "Whether any human intervention was required during the task."
    },
    "interventionCount": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of distinct human interventions during the task."
    },
    "interventionDetails": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "Brief description of each human intervention (legacy - prefer interventions field)."
    },
    "interventions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["timestamp", "type", "severity", "note"],
        "additionalProperties": false,
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 datetime when the intervention occurred."
          },
          "type": {
            "type": "string",
            "enum": [
              "clarification",
              "bugfix",
              "manual_merge",
              "environment_fix",
              "prompt_edit",
              "scope_change",
              "rollback"
            ],
            "description": "Type of intervention (reason for human involvement)."
          },
          "severity": {
            "type": "string",
            "enum": ["low", "med", "high"],
            "description": "Severity/impact of the intervention."
          },
          "note": {
            "type": "string",
            "description": "Human-readable description of what was done."
          },
          "timeSpentSeconds": {
            "type": "number",
            "minimum": 0,
            "description": "Optional time spent on this intervention in seconds."
          }
        }
      },
      "description": "Structured intervention events (machine-usable)."
    },
    "rationale": {
      "type": "string",
      "description": "Free-text rationale from the LLM judge explaining the score."
    },
    "issueId": {
      "type": "string",
      "description": "Linear issue identifier (e.g. \"HOK-697\"), if the task was issue-based."
    },
    "prUrl": {
      "type": "string",
      "format": "uri",
      "description": "Pull request URL, if the task produced a PR."
    },
    "tokenUsage": {
      "type": "object",
      "description": "Token usage from the LLM judge API call.",
      "properties": {
        "inputTokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of input (prompt) tokens."
        },
        "outputTokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of output (completion) tokens."
        },
        "totalTokens": {
          "type": "integer",
          "minimum": 0,
          "description": "Total tokens (input + output)."
        }
      },
      "required": ["inputTokens", "outputTokens", "totalTokens"],
      "additionalProperties": false
    },
    "estimatedCost": {
      "type": "number",
      "minimum": 0,
      "description": "Estimated cost in USD based on the pricing table."
    },
    "agentType": {
      "type": "string",
      "description": "Agent that produced the work being evaluated (e.g. 'claude', 'codex')."
    },
    "workflowCost": {
      "type": "number",
      "minimum": 0,
      "description": "Total estimated cost in USD to build the feature (all agent sessions on this branch)."
    },
    "workflowTokenUsage": {
      "type": "object",
      "description": "Per-model token usage breakdown from the workflow sessions.",
      "additionalProperties": {
        "type": "object",
        "properties": {
          "inputTokens": {
            "type": "integer",
            "minimum": 0,
            "description": "Base input (prompt) tokens."
          },
          "cacheCreationTokens": {
            "type": "integer",
            "minimum": 0,
            "description": "Tokens used to create prompt cache."
          },
          "cacheReadTokens": {
            "type": "integer",
            "minimum": 0,
            "description": "Tokens read from prompt cache."
          },
          "outputTokens": {
            "type": "integer",
            "minimum": 0,
            "description": "Output (completion) tokens."
          },
          "costUsd": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated cost in USD for this model."
          }
        },
        "required": ["inputTokens", "cacheCreationTokens", "cacheReadTokens", "outputTokens", "costUsd"],
        "additionalProperties": false
      }
    },
    "difficultyBand": {
      "type": "string",
      "enum": ["trivial", "easy", "medium", "hard", "very_hard"],
      "description": "Difficulty band classification derived from signals."
    },
    "difficultySignals": {
      "type": "object",
      "description": "Quantifiable difficulty metrics computed from PR data.",
      "properties": {
        "locTouched": {
          "type": "integer",
          "minimum": 0,
          "description": "Lines of code touched (additions + deletions)."
        },
        "filesTouched": {
          "type": "integer",
          "minimum": 0,
          "description": "Number of files modified in the PR."
        },
        "dependencyDepth": {
          "type": "integer",
          "minimum": 0,
          "description": "Dependency depth (optional)."
        },
        "testRuntime": {
          "type": "number",
          "minimum": 0,
          "description": "Test runtime in seconds (optional)."
        },
        "moduleHotspotScore": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Module hotspot score based on git history (optional)."
        }
      },
      "required": ["locTouched", "filesTouched"],
      "additionalProperties": false
    },
    "stratum": {
      "type": "string",
      "description": "Tech stack and size stratum (e.g., 'ts_nextjs_small', 'py_django_med')."
    },
    "routingDecision": {
      "type": "object",
      "description": "Routing decision metadata capturing all candidates considered (required if training routing models).",
      "properties": {
        "candidates": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["agentType", "modelId"],
            "additionalProperties": false,
            "properties": {
              "agentType": {
                "type": "string",
                "description": "Agent type (e.g., 'claude', 'codex')."
              },
              "modelId": {
                "type": "string",
                "description": "Model identifier (e.g., 'claude-opus-4-6', 'gpt-5.3-codex')."
              },
              "modelVersion": {
                "type": "string",
                "description": "Specific model version string (optional)."
              },
              "toolsetId": {
                "type": "string",
                "description": "Toolset variant identifier (optional)."
              },
              "priceTier": {
                "type": "string",
                "description": "Price tier classification (e.g., 'low', 'medium', 'high')."
              }
            }
          },
          "description": "All candidate configurations that were eligible for this task."
        },
        "chosen": {
          "oneOf": [
            {
              "type": "object",
              "required": ["agentType", "modelId"],
              "additionalProperties": false,
              "properties": {
                "agentType": {
                  "type": "string",
                  "description": "Agent type (e.g., 'claude', 'codex')."
                },
                "modelId": {
                  "type": "string",
                  "description": "Model identifier (e.g., 'claude-opus-4-6', 'gpt-5.3-codex')."
                },
                "modelVersion": {
                  "type": "string",
                  "description": "Specific model version string (optional)."
                },
                "toolsetId": {
                  "type": "string",
                  "description": "Toolset variant identifier (optional)."
                },
                "priceTier": {
                  "type": "string",
                  "description": "Price tier classification (e.g., 'low', 'medium', 'high')."
                }
              }
            },
            {
              "type": "integer",
              "minimum": 0,
              "description": "Index into the candidates array."
            }
          ],
          "description": "The chosen candidate (full object or index into candidates array)."
        },
        "decisionPolicyVersion": {
          "type": "string",
          "description": "Decision policy version that made this choice (e.g., 'baseline', 'router-v1.0')."
        },
        "decisionRationale": {
          "type": "string",
          "description": "Optional rationale or top features used for the decision."
        }
      },
      "required": ["candidates", "chosen", "decisionPolicyVersion"],
      "additionalProperties": false
    },
    "taskContext": {
      "type": "object",
      "description": "Task context metadata for routing and evaluation (HOK-774).",
      "properties": {
        "taskType": {
          "type": "string",
          "enum": ["bugfix", "feature", "refactor", "chore", "docs", "test", "infra"],
          "description": "Type of task being performed."
        },
        "changeKind": {
          "type": "string",
          "enum": ["modify_existing", "create_new", "mixed"],
          "description": "Whether the task modifies existing code, creates new code, or both."
        },
        "complexity": {
          "oneOf": [
            {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Complexity score (0-1)."
            },
            {
              "type": "string",
              "enum": ["xs", "s", "m", "l", "xl"],
              "description": "Complexity band classification."
            }
          ],
          "description": "Complexity score (0-1) or band classification."
        },
        "constraints": {
          "type": "object",
          "description": "Special constraints that apply to this task.",
          "properties": {
            "hasStrictStyle": {
              "type": "boolean",
              "description": "Whether the task requires strict adherence to a style guide."
            },
            "mustNotTouchX": {
              "type": "boolean",
              "description": "Whether the task has modules/files that must not be touched."
            },
            "timeboxed": {
              "type": "boolean",
              "description": "Whether the task is timeboxed with a deadline."
            },
            "noNetAccess": {
              "type": "boolean",
              "description": "Whether the task must be completed without network access."
            }
          },
          "additionalProperties": false
        },
        "filesTouchedEstimate": {
          "type": "integer",
          "minimum": 0,
          "description": "Estimated number of files to be touched."
        },
        "expectedLoCChange": {
          "type": "integer",
          "minimum": 0,
          "description": "Estimated lines of code to be changed."
        },
        "requiresDomainKnowledge": {
          "oneOf": [
            {
              "type": "string",
              "description": "Domain-specific knowledge required (e.g., 'payments', 'auth', 'k8s')."
            },
            {
              "type": "boolean",
              "description": "Whether domain knowledge is required (boolean form)."
            }
          ],
          "description": "Domain-specific knowledge required."
        }
      },
      "required": ["taskType", "changeKind", "complexity"],
      "additionalProperties": false
    },
    "repoContext": {
      "type": "object",
      "description": "Repository context metadata for routing and evaluation (HOK-774).",
      "properties": {
        "repoId": {
          "type": "string",
          "description": "Stable identifier for the repository (hash or slug)."
        },
        "repoVisibility": {
          "type": "string",
          "enum": ["oss", "private"],
          "description": "Whether the repository is open source or private."
        },
        "primaryLanguage": {
          "type": "string",
          "description": "Primary programming language."
        },
        "languages": {
          "type": "object",
          "description": "Map of language to percentage.",
          "additionalProperties": {
            "type": "number",
            "minimum": 0,
            "maximum": 100
          }
        },
        "frameworks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Frameworks used in the repository."
        },
        "buildSystem": {
          "type": "string",
          "description": "Build system (e.g., 'webpack', 'vite', 'gradle')."
        },
        "packageManager": {
          "type": "string",
          "description": "Package manager (e.g., 'npm', 'yarn', 'pnpm')."
        },
        "testFrameworks": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Test frameworks used."
        },
        "ciProvider": {
          "type": "string",
          "description": "CI provider (e.g., 'github-actions', 'gitlab-ci')."
        },
        "repoSize": {
          "type": "object",
          "description": "Repository size metrics.",
          "properties": {
            "fileCount": {
              "type": "integer",
              "minimum": 0,
              "description": "Total number of files in the repository."
            },
            "loc": {
              "type": "integer",
              "minimum": 0,
              "description": "Total lines of code in the repository."
            },
            "dependencyCount": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of dependencies (approximate)."
            }
          },
          "required": ["fileCount", "loc", "dependencyCount"],
          "additionalProperties": false
        },
        "monorepo": {
          "type": "boolean",
          "description": "Whether the repository is a monorepo."
        }
      },
      "required": ["repoId", "repoVisibility", "primaryLanguage"],
      "additionalProperties": false
    },
    "outcomes": {
      "type": "object",
      "description": "Decomposed outcome components for granular eval analysis.",
      "properties": {
        "success": {
          "type": "boolean",
          "description": "Hard gate: whether the task succeeded (derived from score)."
        },
        "ci": {
          "type": "object",
          "description": "CI/CD check results.",
          "properties": {
            "ran": {
              "type": "boolean",
              "description": "Whether CI checks were triggered for this PR."
            },
            "passed": {
              "type": "boolean",
              "description": "Whether all CI checks passed."
            },
            "checks": {
              "type": "array",
              "description": "Individual check results.",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Check name (e.g. tests, lint, build)."
                  },
                  "status": {
                    "type": "string",
                    "enum": ["success", "failure", "pending", "skipped", "cancelled"],
                    "description": "Check status."
                  },
                  "durationSeconds": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Check duration in seconds (if available)."
                  }
                },
                "required": ["name", "status"],
                "additionalProperties": false
              }
            }
          },
          "required": ["ran", "passed", "checks"],
          "additionalProperties": false
        },
        "tests": {
          "type": "object",
          "description": "Test additions and results.",
          "properties": {
            "added": {
              "type": "boolean",
              "description": "Whether new test files were added in this PR."
            },
            "passRate": {
              "type": "number",
              "minimum": 0,
              "maximum": 1,
              "description": "Test pass rate (0-1), if test results are available."
            },
            "durationSeconds": {
              "type": "number",
              "minimum": 0,
              "description": "Total test execution time in seconds, if available."
            }
          },
          "required": ["added"],
          "additionalProperties": false
        },
        "staticAnalysis": {
          "type": "object",
          "description": "Static analysis results.",
          "properties": {
            "lintDelta": {
              "type": "number",
              "description": "Change in lint errors (negative = improvement, positive = regression)."
            },
            "typecheckPassed": {
              "type": "boolean",
              "description": "Whether typecheck passed."
            },
            "securityFindingsDelta": {
              "type": "number",
              "description": "Change in security findings (negative = improvement)."
            }
          },
          "additionalProperties": false
        },
        "review": {
          "type": "object",
          "description": "Human review activity on the PR.",
          "properties": {
            "humanReviewRequired": {
              "type": "boolean",
              "description": "Whether human review was required (any review comments or changes requested)."
            },
            "rounds": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of distinct review submission rounds."
            },
            "approvals": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of approval reviews."
            },
            "changeRequests": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of change request reviews."
            }
          },
          "required": ["humanReviewRequired", "rounds", "approvals", "changeRequests"],
          "additionalProperties": false
        },
        "rework": {
          "type": "object",
          "description": "Agent rework and failures during implementation.",
          "properties": {
            "agentIterations": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of agent iterations (session turns, commits, or retries)."
            },
            "toolFailures": {
              "type": "integer",
              "minimum": 0,
              "description": "Number of tool/API call failures, if tracked."
            }
          },
          "required": ["agentIterations"],
          "additionalProperties": false
        },
        "delivery": {
          "type": "object",
          "description": "PR delivery status.",
          "properties": {
            "prCreated": {
              "type": "boolean",
              "description": "Whether a PR was created."
            },
            "merged": {
              "type": "boolean",
              "description": "Whether the PR was merged."
            },
            "timeToMergeSeconds": {
              "type": "number",
              "minimum": 0,
              "description": "Time from PR creation to merge in seconds, if merged."
            }
          },
          "required": ["prCreated", "merged"],
          "additionalProperties": false
        }
      },
      "required": ["success", "review", "rework", "delivery"],
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true,
      "description": "Optional extensibility bag for additional metadata."
    }
  }
}
